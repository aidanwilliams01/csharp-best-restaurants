@{
  Layout = "_Layout";
}

@using BestRestaurants.Models;

<h1>Restaurants</h1>

<ul>
  @foreach(Restaurant restaurant in Model)
  {
    <li>@Html.ActionLink($"{restaurant.Name}", "Details", new {id = restaurant.RestaurantId}) | @restaurant.Address | @restaurant.City @* | @restaurant.Category.Name *@</li>
  }
</ul>

<p>@Html.ActionLink("Add new restaurant", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>